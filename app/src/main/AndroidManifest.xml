            android:name="com.firs.facedetecttosvr.WelcomeActivity"
            android:screenOrientation="landscape" >

            <!-- android:screenOrientation="landscape" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.firs.facedetecttosvr.SetServerIP"
            android:label="设置服务器" >
        </activity>
        <activity
            android:name="com.firs.facedetecttosvr.Login"
            android:label="欢迎使用" >

